const int IMAGE_WIDTH = 600;

struct brojevi {
	int broj1;
	int broj2;
	int broj3;
};

brojevi parse(std::string str)
{
	brojevi nums;

	int pos1 = str.find("broj1=", 0);
	int pos2 = str.find("&", pos1 + 6);
	nums.broj1 = std::stoi(str.substr(pos1 + 6, pos2 - pos1 - 6));

	pos1 = str.find("broj2=", pos2);
	pos2 = str.find("&", pos1 + 6);
	nums.broj2 = std::stoi(str.substr(pos1 + 6, pos2 - pos1 - 6));

	pos1 = str.find("broj3=", pos2);
	nums.broj3 = std::stoi(str.substr(pos1 + 6));

	return nums;
}

void main(int argc, char* argv[])
{
	std::string reqmethod = getenv("REQUEST_METHOD");
	std::string q_string = getenv("QUERY_STRING");
	//
	std::string postInputString;

	brojevi nums;

	if (reqmethod == "GET") // GET zahtev
	{
		if (!q_string.empty())
			nums = parse(q_string);
	}
	else if (reqmethod == "POST") // POST zahtev
	{
		int br_byte = atoi(getenv("CONTENT_LENGTH"));
		if (!q_string.empty())
			nums = parse(q_string);

		if(br_byte>0)
			nums = parse(q_string);
	}

	long long proizvod = nums.broj1 * nums.broj2 * nums.broj3;

	std::cout << "Content-Type: text/html\n\n";
	std::cout << "<html> <head>\n";
	std::cout << "<title>checkbox</title>\n";
	std::cout << "</head>\n";
	std::cout << "<h1>Rezultat</h1>\n";
	std::cout << "<p>Rezultat je: " << proizvod << "</p>";
	std::cout << "</body> </html>\n";
}

